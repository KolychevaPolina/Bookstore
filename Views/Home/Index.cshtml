@model BookStore.Models.BooksListViewModel
@{
    ViewBag.Title = "BookStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Каталог книг </h2>

    <form method="get">
        <div class="form-inline">
            <label class="control-label">Жанр: </label>
            @Html.DropDownList("genre", Model.Genres as SelectList,
                        htmlAttributes: new { @class = "form-control" })

            <label class="control-label">Страна производства: </label>
            @Html.DropDownList("country", Model.Countries as SelectList,
                        htmlAttributes: new { @class = "form-control" })

            <label class="control-label">Язык издания: </label>
            @Html.DropDownList("language", Model.Languages as SelectList,
                        htmlAttributes: new { @class = "form-control" })

            <label class="control-label">Вид обложки: </label>
            @Html.DropDownList("cover", Model.Covers as SelectList,
                        htmlAttributes: new { @class = "form-control" })
            <p></p>
            <input type="submit" value="Фильтр" class="btn btn-primary" />
            <p></p>
        </div>
    </form>

    <table class="table table-bordered table-hover">
        <thead>
            <tr class="header">
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td><p>Жанр</p></td>
                <td><p>Страна производства</p></td>
                <td><p>Язык издания</p></td>
                <td><p>Вид обложки</p></td>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td><p>@Html.DisplayFor(modelItem => item.Name)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Author)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Price)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Genre.GenreName)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Country.CountryName)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Language.LanguageName)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Cover.CoverName)</p></td>
                    <td><p><a href="/Home/Buy/@Html.DisplayFor(modelItem => item.Id)">Купить</a></p></td>
                </tr>
            }
        </tbody>
    </table>
</div>
